<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="blog">

	<select id="getBlogStudyList" resultType="BlogDTO">
		SELECT
			*
		FROM
			STUDYBLOG
		WHERE
			SORT ="DEVELOPMENT"
	</select>
	
	<insert id="insertBlog" parameterType="BlogDTO">
		
		INSERT INTO STUDYBLOG(HUMAN_ID, SUBJECT, CONTENT, SORT, PICTURE1, PICTURE2, PICTURE3)
		VALUES(
			
			#{humanId},
			#{subject},
			#{content},
			#{sort},
			#{picture1},
			#{picture2},
			#{picture3}
		
		
		)
		
	
	
	</insert>
	
	<select id="getBlogStudyDetail" parameterType="long" resultType="BlogDTO">
	
		
		SELECT
			*
		FROM
			STUDYBLOG
		WHERE 
			BLOG_ID = #{blogId}
		
		
	
	</select>
	
	<update id="increaseReadCnt" parameterType="long">
		
		UPDATE
			STUDYBLOG
		SET
			READ_CNT = READ_CNT +1
		WHERE
			BLOG_ID = #{blogId}
	</update>
	
	<select id="getBlogKeywordList" resultType="BlogDTO">
		
		SELECT
			*
		FROM
			STUDYBLOG
		WHERE 
			SORT='KEYWORD'
		
	
	
	</select>
	
	<select id="getBlogKeywordDetail" parameterType="Long" resultType="BlogDTO">
	 	
	 	SELECT
			*
		FROM
			STUDYBLOG
		WHERE 
			BLOG_ID = #{blogId}
	
	
	</select>
	
	<select id="getblogDayTimeList" resultType="BlogDTO">
		
		SELECT
			*
		FROM
			STUDYBLOG
		WHERE
			SORT = 'DAILYROUTINE'
	
	</select>
	
	<select id="getBlogDayTimeDetail" parameterType="long" resultType="BlogDTO">
	
		SELECT
			*
		FROM
			STUDYBLOG
		WHERE 
			BLOG_ID = #{blogId}
	
	</select>
	
	<select id="getblogTravelList" resultType="BlogDTO">
		SELECT
			*
		FROM
			STUDYBLOG
		WHERE
			SORT = 'TRAVEL'
			
	
	
	</select>
	
	<select id="getBlogTravelDetail" parameterType="long" resultType="BlogDTO">
		
		SELECT
			*
		FROM
			STUDYBLOG
		WHERE
			BLOG_ID = #{blogId}
	
	
	</select>
	
	<update id="updateKeywordBlog" parameterType="BlogDTO">
		
		UPDATE
			STUDYBLOG
		SET
			PICTURE1 = #{picture1},
			PICTURE2 = #{picture2},
			PICTURE3 = #{picture3},
			SORT = #{sort},
			ENROLL_DT = NOW(),
			CONTENT = #{content},
			SUBJECT = #{subject}			
		WHERE
			BLOG_ID = #{blogId}
			
	
	</update>
	
	<delete id="blogKeywordDelete" parameterType="BlogDTO">
		
		DELETE FROM 
			STUDYBLOG
		WHERE
			BLOG_ID = #{blogId}
			
	</delete>
	
	<delete id="blogDayTimeDelete" parameterType="BlogDTO">
		
		DELETE FROM
			STUDYBLOG
		WHERE
			BLOG_ID = #{blogId}
	
	</delete>
	
	<delete id="blogStudyDelete" parameterType="BlogDTO">
		
		DELETE FROM 
			STUDYBLOG
		WHERE
			BLOG_ID = #{blogId}
	
	</delete>
	
	<delete id="blogTravelDelete" parameterType="BlogDTO">
		
		DELETE FROM 
			STUDYBLOG
		WHERE
			BLOG_ID = #{blogId}
	
	</delete>
	
	

</mapper>